datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  uuid      String @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  username  String @unique
  password  String
}

enum Role {
  USER
  ADMIN
  EDITOR
}
